<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with(model: @item, remote: true) do |form| %>
     <form>
       <h3> Add gift</h3>
      <div class="form-group">
       <!-- <%= form.label :Title %> -->
       <%= form.text_field :item_name, placeholder: "Title", required: true  %>
      </div>

      <div class="form-group">
        <%= form.file_field :item_image %>
      </div>

      <div class="form-group">
        <!-- <%= form.label :Description %> -->
        <%= form.text_area :item_detail, placeholder: "Description"  %>
      </div>

      <div class="form-group">
        <!-- <%= form.label :Cost %> -->
        <%= form.text_field :item_cost, placeholder: "0å††"%>
      </div>

      <%= form.submit "Add new gift", class: "btn btn-default" %>
     </form>
    <% end %>
  </div>
</div>
